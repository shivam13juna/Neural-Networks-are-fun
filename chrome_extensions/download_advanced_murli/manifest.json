{
  "manifest_version": 3,
  "name": "Advanced Murli Downloader (Hindi) - Brahma Kumaris",
  "version": "1.0.0",
  "description": "Downloads and merges the latest Hindi Advance Murli PDFs.",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {},
  "permissions": [
    "downloads",
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.shivbabas.org/*",
    "https://babamurli.net/*",
    "https://drive.google.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  }
}